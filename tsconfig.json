{
    "compilerOptions": {
        "target": "ESNext",
        "sourceMap": false,
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "strict": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/*"
            ],
            "@styles/*": [
                "demo/@/styles/*"
            ],
            "@components/*": [
                "demo/@/components/*"
            ],
            "@utils/*": [
                "demo/@/utils/*"
            ],
            "@assets/*": [
                "assets/*"
            ]
        }
    },
    "include": [
        "src/",
        "demo/"
    ]
}
